{
    

    "middleware": {
        "babelConnect": {
            "enabled": true,
            "priority": 30,
            "route": "/templates",
            "module": {
                "name": "babel-connect",
                "arguments": [
                    {
                        "options": {
                            "presets": ["react"],
                            "plugins": ["transform-es2015-modules-amd"]
                        },
                        "src": "path:./public/templates",
                        "dest": "path:./.build/templates"
                    }
                ]
            }
        },

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "construx",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {
                        
                        
                        "css": {
                            "module": "construx-sass",
                            "files": "/css/**/*.css"
                        },
                        
                        "copier": {
                            "module": "construx-copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        }
    }
}
